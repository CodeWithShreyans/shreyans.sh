{
    "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "nursery": {
                "useSortedClasses": {
                    "level": "warn"
                }
            },
            "style": {
                "useNamingConvention": {
                    "level": "warn",
                    "options": {
                        "strictCase": false
                    }
                }
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    },
    "files": {
        "ignore": ["node_modules/*", "app/components/*", "package.json"]
    },
    "overrides": [
        {
            "include": ["*.astro"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    }
                }
            }
        }
    ]
}
