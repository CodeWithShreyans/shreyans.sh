{
    "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    },
    "files": {
        "ignore": [
            "node_modules/*",
            ".next/*",
            ".contentlayer/*",
            ".vercel/*",
            "app/components/shadcn/*",
            "app/components/aceternity/*"
        ]
    },
    "overrides": [
        {
            "include": ["**/page.tsx", "**/layout.tsx"],
            "linter": {
                "rules": {
                    "style": {
                        "noDefaultExport": "off"
                    }
                }
            }
        }
    ]
}
