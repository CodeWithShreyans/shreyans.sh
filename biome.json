{
    "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "style": {
                "useNamingConvention": {
                    "level": "warn",
                    "options": {
                        "strictCase": false
                    }
                }
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    },
    "files": {
        "ignore": [
            "node_modules/*",
            ".next/*",
            ".contentlayer/*",
            ".vercel/*",
            "app/components/shadcn/*",
            "app/components/aceternity/*",
            "package.json"
        ]
    },
    "overrides": [
        {
            "include": [
                "**/page.tsx",
                "**/layout.tsx",
                "contentlayer.config.ts",
                "global-error.tsx",
                "next.config.mjs"
            ],
            "linter": {
                "rules": {
                    "style": {
                        "noDefaultExport": "off"
                    }
                }
            }
        },
        {
            "include": ["app/env.mjs"],
            "linter": {
                "rules": {
                    "style": {
                        "useNamingConvention": "off"
                    }
                }
            }
        }
    ]
}
